{
  "manifest_version": 3,
  "version": "0.1",
  "author": "Thunderbird Team",
  "name": "Thunderbird Send",
  "description": "Thunderbird and friends",
  "browser_specific_settings": {
    "gecko": {
      "id": "lockbox@services.thunderbird.net",
      "strict_min_version": "110.0a1"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "index.management.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "cloud_file": {
    "name": "Lockbox Send",
    "management_url": "index.management.html",
    "browser_style": true,
    "reuse_uploads": false
  },
  "permissions": [
    "storage",
    "compose",
    "notifications",
    "activeTab",
    "tabs",
    "tabHide",
    "messagesRead",
    "messagesModify"
  ]
}
