{
  "manifest_version": 2,
  "version": "0.1.18",
  "author": "Thunderbird Team",
  "name": "Thunderbird Send",
  "description": "Thunderbird and friends",
  "browser_specific_settings": {
    "gecko": {
      "id": "send@thunderbird.net",
      "strict_min_version": "128.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "index.management.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "host_permissions": ["<all_urls>"],
  "cloud_file": {
    "name": "Thunderbird Send",
    "management_url": "index.management.html",
    "browser_style": true,
    "reuse_uploads": false
  },
  "permissions": [
    "storage",
    "compose",
    "notifications",
    "activeTab",
    "tabs",
    "messagesRead",
    "messagesModify",
    "cookies",
    "sensitiveDataUpload"
  ]
}
