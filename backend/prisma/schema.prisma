enum ItemType {
  MESSAGE
  FILE
}
model Item {
  id        Int           @id @default(autoincrement())
  name      String
  containerId  Int
  container    Container  @relation(fields: [containerId], references: [id])
  ownerId   Int
  owner     User          @relation(fields: [ownerId], references: [id])
  type      ItemType

  // unique "file names" in a container
  @@unique([name, containerId])
}