{
  "name": "backend",
  "version": "0.1.22",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "build": "pnpm --package=typescript dlx tsc && tsc-alias && pnpm sentry:sourcemaps",
    "ci:validate": "pnpm run lint:all; pnpm run test",
    "db:browse": "prisma studio",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset --force",
    "db:update": "prisma db push",
    "debug": "pnpm db:browse & pnpm debug:attach",
    "debug:attach": "nodemon -e js,ts --exec 'node --inspect=0.0.0.0:9229 --require ts-node/register -r tsconfig-paths/register src/index.ts'",
    "dev": "nodemon -e js,ts src/index.ts",
    "lint:all": "eslint . --fix --ignore-pattern 'dist/*'",
    "prettier:all": "prettier --write .",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org thunderbird --project send-suite-backend ./dist && sentry-cli sourcemaps upload --org thunderbird --project send-suite-backend ./dist",
    "prestart": "NODE_ENV=production pnpm run build",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "vitest run --silent",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "postversion": "bun run ./scripts/bump.ts"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "@sentry/cli": "^2.32.1",
    "@sentry/node": "^8.15.0",
    "@sentry/profiling-node": "^8.15.0",
    "@tweedegolf/sab-adapter-amazon-s3": "^1.0.17",
    "@tweedegolf/sab-adapter-backblaze-b2": "^1.0.5",
    "@tweedegolf/sab-adapter-local": "^1.0.7",
    "@tweedegolf/storage-abstraction": "^2.1.3",
    "axios": "^1.6.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "openid-client": "^5.6.4",
    "passport": "^0.7.0",
    "passport-oauth2-refresh": "^2.2.0",
    "passport-openidconnect": "^0.1.1",
    "posthog-node": "^4.0.1",
    "prisma": "^5.1.1",
    "vite": "^5.3.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.13",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.9",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.4.8",
    "@types/passport": "^1.0.16",
    "@types/passport-openidconnect": "^0.1.3",
    "@types/session-file-store": "^1.2.4",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.6.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "typescript-eslint": "^7.13.0",
    "vitest": "^1.6.0"
  }
}
