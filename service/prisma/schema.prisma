generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id      Int     @id @default(autoincrement())
  email   String  @unique
  groups  GroupUser[]
}

model Group {
  id      Int     @id @default(autoincrement())
  members GroupUser[]
  items   GroupItem[]
}

model GroupUser {
  groupId Int
  group   Group @relation(fields: [groupId], references: [id])
  userId  Int
  user    User  @relation(fields: [userId], references: [id])

  @@id([groupId, userId])
}

model Item {
  id        Int      @id @default(autoincrement())
  url       String   @unique
  groups    GroupItem[]
}

model GroupItem {
  groupId Int
  group   Group @relation(fields: [groupId], references: [id])
  itemId  Int
  item    Item  @relation(fields: [itemId], references: [id])

  @@id([groupId, itemId])
}